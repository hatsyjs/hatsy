{
  "name": "@hatsy/hatsy",
  "version": "2.5.1",
  "description": "Asynchronous TypeScript-friendly HTTP server for Node.js",
  "keywords": [
    "http-framework",
    "http-server",
    "request-handler",
    "web-server"
  ],
  "homepage": "https://github.com/hatsyjs/hatsy",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:hatsyjs/hatsy.git"
  },
  "license": "MIT",
  "author": "Ruslan Lopatin <ruslan.lopatin@gmail.com>",
  "bugs": {
    "url": "https://github.com/hatsyjs/hatsy/issues"
  },
  "type": "module",
  "main": "./dist/hatsy.js",
  "types": "./index.d.ts",
  "exports": {
    ".": "./dist/hatsy.js",
    "./core": "./dist/hatsy.core.js",
    "./package.json": "./package.json",
    "./testing": "./dist/hatsy.testing.js"
  },
  "dependencies": {
    "@frontmeans/httongue": "^2.3.0",
    "@hatsy/http-header-value": "^3.6.0",
    "@proc7ts/logger": "^1.3.2",
    "@proc7ts/primitives": "^3.0.2"
  },
  "engines": {
    "node": ">=12"
  },
  "devDependencies": {
    "@jest/globals": "^29.2.0",
    "@run-z/eslint-config": "^3.2.2",
    "@run-z/rollup-helpers": "^2.1.0",
    "@types/node": "^16.11.65",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "eslint": "^8.25.0",
    "eslint-plugin-jest": "^27.1.2",
    "gh-pages": "^4.0.0",
    "jest": "^29.2.0",
    "jest-junit": "^14.0.1",
    "jest-mock": "^29.2.0",
    "prettier": "^2.7.1",
    "prettier-eslint-cli": "^7.1.0",
    "rollup": "^3.2.1",
    "rollup-plugin-flat-dts": "^1.8.1",
    "rollup-plugin-typescript2": "^0.34.1",
    "run-z": "^1.10.1",
    "shx": "^0.3.4",
    "ts-jest": "^29.0.3",
    "tslib": "^2.4.0",
    "typedoc": "^0.23.16",
    "typescript": "^4.8.4"
  },
  "scripts": {
    "all": "run-z build,lint,test",
    "build": "run-z +z --then rollup -c",
    "ci:all": "run-z all +test/--ci/--runInBand",
    "clean": "run-z +z --then shx rm -rf \"index.d.ts?(.map)\" \"*/index.d.ts?(.map)\" dist target",
    "doc": "run-z +z --then typedoc",
    "doc:publish": "run-z doc --then gh-pages --dist target/typedoc --dotfiles",
    "format": "run-z +z --then prettier-eslint --write --include-dot-files \"src/**/*.*\" \"*.{js,cjs,json,md}\"",
    "lint": "run-z +z --then eslint .",
    "test": "run-z +z env:NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" --then jest",
    "z": "run-z +cmd:rollup,+cmd:typedoc,+cmd:eslint,+cmd:jest"
  }
}
