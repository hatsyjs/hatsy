{
  "name": "@hatsy/hatsy",
  "version": "2.5.0",
  "description": "Asynchronous TypeScript-friendly HTTP server for Node.js",
  "keywords": [
    "http-framework",
    "http-server",
    "request-handler",
    "web-server"
  ],
  "homepage": "https://github.com/hatsyjs/hatsy",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:hatsyjs/hatsy.git"
  },
  "license": "MIT",
  "author": "Ruslan Lopatin <ruslan.lopatin@gmail.com>",
  "bugs": {
    "url": "https://github.com/hatsyjs/hatsy/issues"
  },
  "type": "module",
  "main": "./dist/hatsy.js",
  "types": "./index.d.ts",
  "exports": {
    ".": "./dist/hatsy.js",
    "./core": "./dist/hatsy.core.js",
    "./package.json": "./package.json",
    "./testing": "./dist/hatsy.testing.js"
  },
  "dependencies": {
    "@frontmeans/httongue": "^2.3.0",
    "@hatsy/http-header-value": "^3.6.0",
    "@proc7ts/logger": "^1.3.2",
    "@proc7ts/primitives": "^3.0.2"
  },
  "engines": {
    "node": ">=12"
  },
  "devDependencies": {
    "@jest/globals": "^27.5.1",
    "@run-z/eslint-config": "^3.0.0",
    "@run-z/rollup-helpers": "^2.0.0",
    "@types/node": "^14.18.12",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-plugin-jest": "^26.1.1",
    "gh-pages": "^3.2.3",
    "jest": "^27.5.1",
    "jest-junit": "^13.0.0",
    "jest-mock": "^27.5.1",
    "remark-cli": "^10.0.1",
    "remark-lint-list-item-indent": "^3.1.1",
    "remark-lint-no-shortcut-reference-link": "^3.1.1",
    "remark-preset-lint-recommended": "^6.1.2",
    "rollup": "^2.67.3",
    "rollup-plugin-flat-dts": "^1.4.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.31.2",
    "run-z": "^1.10.0",
    "shx": "^0.3.4",
    "ts-jest": "^27.1.3",
    "tslib": "^2.3.1",
    "typedoc": "^0.22.11",
    "typescript": "^4.5.5"
  },
  "scripts": {
    "all": "run-z build,lint,test",
    "build": "run-z +z --then rollup -c",
    "ci:all": "run-z all +test/--ci/--runInBand",
    "clean": "run-z +z --then shx rm -rf 'index.d.ts?(.map)' '*/index.d.ts?(.map)' dist target",
    "doc": "run-z +z --then typedoc",
    "doc:publish": "run-z doc --then gh-pages --dist target/typedoc --dotfiles",
    "lint": "run-z + lint:md --and eslint .",
    "lint:md": "run-z +z --then remark .",
    "test": "run-z +z env:NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" --then jest",
    "z": "run-z +cmd:rollup,+cmd:typedoc,+cmd:eslint,+cmd:jest"
  }
}
